@using Humanizer
@using Docstore.Application.Models
@using Docstore.App.Common.Extensions
@model DocumentsIndexViewModel

@{
    ViewData["Title"] = "Documents";

    var breadcrumbs = new List<BreadcrumbItem>
    {
        Constants.BreadcrumbHome,
        Constants.BreadcrumbDocumentsHome
    };

    if (Model!.Folder != null)
        breadcrumbs.Add(new BreadcrumbItem(Model!.Folder.Name!, icon: @"<path d=""M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"" />"));

}

<div class="mb-20 flex justify-center items-center flex-col">
    <partial name="~/Views/Shared/Partials/_AppHeader.cshtml" />
    <a up-target="[layout-main]" up-preload asp-action="Create" asp-controller="Documents" class="py-2 px-3 bg-primary-500 text-primary-900 hover:text-white text-sm font-semibold rounded-md shadow-lg shadow-primary-500/10 hover:shadow-primary-500/50 active:shadow-primary-500/75 focus:outline-none transition duration-500  text-center inline-flex items-center">
        Import new Document
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V8z" clip-rule="evenodd" /></svg>
    </a>
</div>


<div class="mb-4 inline-flex">
    <partial name="~/Views/Shared/Partials/_Breadcrumb.cshtml" model="breadcrumbs" />
</div>

<partial name="Partials/_DocumentsTable" model="Model!.Documents" />
